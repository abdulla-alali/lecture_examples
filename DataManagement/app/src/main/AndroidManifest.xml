<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="qa.edu.qu.cse.cmps497.datamanagement">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SharedPreferencesActivity" />
        <activity android:name=".PreferenceFragmentActivity" />
        <activity android:name=".FileInternalActivity" />
        <activity android:name=".FileExternalActivity" />
        <activity android:name=".SQLDatabaseActivity"
            android:label="@string/sql_database"/>
    </application>

</manifest>
