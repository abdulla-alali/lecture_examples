<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="qa.edu.qu.cse.cmps497.services">

    <uses-permission android:name="qa.edu.qu.cse.cmps497.servicesremote.PERMISSION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".services.LocalLoggingService"
            android:exported="false" />
        <service
            android:name=".services.MusicPlayerService"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".MusicPlayerClient"
            android:launchMode="singleTask" />
        <activity android:name=".BindingActivity" />
        <activity android:name=".BinderBoundActivity" />

        <service
            android:name=".services.BinderService"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".MessengerBoundActivity" />
        <activity android:name=".AIDLBoundActivity"></activity>
    </application>

</manifest>
